<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        d:DesignWidth="700"
        d:DesignHeight="475"

        xmlns:vm="clr-namespace:Ameko.ViewModels.Windows"
        xmlns:i18n="clr-namespace:Ameko.I18N"
        xmlns:controls="clr-namespace:Ameko.Views.Controls"

        x:Class="Ameko.Views.Windows.DepCtrlWindow"
        x:DataType="vm:DepCtrlWindowViewModel"

        Icon="/Assets/Ameko-Simplified-BG-64.ico"
        Width="700"
        Height="450"
        CanResize="False"
        Title="{x:Static i18n:DepCtrl.DepCtrlWindow_Title}">
    <TabControl>
        <TabItem Header="{x:Static i18n:DepCtrl.DepCtrl_ModulesTab}">
            <controls:DepCtrlModulesTab />
        </TabItem>
        <TabItem Header="{x:Static i18n:DepCtrl.DepCtrl_RepositoriesTab}">
            <controls:DepCtrlRepositoriesTab />
        </TabItem>
        <TabControl.Styles>
            <Style Selector="TabItem">
                <Setter Property="Padding" Value="3 2 3 2" />
                <Setter Property="Margin" Value="0" />
            </Style>
        </TabControl.Styles>
    </TabControl>
</Window>