<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        d:DesignWidth="700"
        d:DesignHeight="450"

        xmlns:vm="clr-namespace:Ameko.ViewModels.Windows"
        xmlns:i18n="clr-namespace:Ameko.I18N"
        xmlns:converters="clr-namespace:Ameko.Converters"
        xmlns:controls="clr-namespace:Ameko.Views.Controls"
        xmlns:holo="clr-namespace:Holo.Scripting.Models;assembly=Holo"
        xmlns:icons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"

        x:Class="Ameko.Views.Windows.DepCtrlWindow"
        x:DataType="vm:DepCtrlWindowViewModel"

        Icon="/Assets/Ameko-Simplified-BG-64.ico"
        Width="700"
        Height="450"
        CanResize="False"
        Title="{x:Static i18n:Resources.DepCtrlWindow_Title}">
    <Window.Resources>
        <converters:DepCtrlIconConverter x:Key="IconConverter" />
        <converters:DepCtrlUpToDateConverter x:Key="UpToDateConverter" />
    </Window.Resources>
    <Grid ColumnDefinitions="*, *"
          RowDefinitions="*, 135, Auto">
        <!-- Module store -->
        <DockPanel Grid.Column="0"
                   Grid.Row="0">
            <TextBlock DockPanel.Dock="Top"
                       Margin="2"
                       HorizontalAlignment="Center"
                       FontSize="16"
                       Text="{x:Static i18n:Resources.DepCtrl_ModuleStore}" />
            <ListBox Margin="2"
                     VerticalAlignment="Stretch"
                     SelectionMode="Single"
                     SelectedItem="{Binding SelectedStoreModule}"
                     ItemsSource="{Binding DependencyControl.ModuleStore, Mode=TwoWay}">
                <ListBox.ItemTemplate>
                    <DataTemplate x:DataType="holo:Module">
                        <Grid ColumnDefinitions="Auto, *, Auto"
                              ToolTip.Tip="{Binding QualifiedName}">
                            <Image Grid.Column="0"
                                   Source="{Binding Type, Converter={StaticResource IconConverter}}" />
                            <TextBlock Grid.Column="1"
                                       Text="{Binding DisplayName}" />
                            <TextBlock Grid.Column="2"
                                       Text="{Binding Version, StringFormat='v{0}'}" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </DockPanel>
        <!-- Store selection information -->
        <controls:ModuleInformation Grid.Column="0"
                                    Grid.Row="1"
                                    DataContext="{Binding SelectedStoreModule}" />
        <!-- Installed modules -->
        <DockPanel Grid.Column="1"
                   Grid.Row="0">
            <TextBlock DockPanel.Dock="Top"
                       Margin="2"
                       HorizontalAlignment="Center"
                       FontSize="16"
                       Text="{x:Static i18n:Resources.DepCtrl_InstalledModules}" />
            <ListBox Margin="2"
                     VerticalAlignment="Stretch"
                     SelectionMode="Single"
                     SelectedItem="{Binding SelectedInstalledModule}"
                     ItemsSource="{Binding DependencyControl.InstalledModules}">
                <ListBox.ItemTemplate>
                    <DataTemplate x:DataType="holo:Module">
                        <Grid ColumnDefinitions="Auto, *, Auto, Auto"
                              ToolTip.Tip="{Binding QualifiedName}">
                            <Image Grid.Column="0"
                                   Source="{Binding Type, Converter={StaticResource IconConverter}}" />
                            <TextBlock Grid.Column="1"
                                       Text="{Binding DisplayName}" />
                            <icons:MaterialIcon Grid.Column="0"
                                                Kind="ArrowUpThinCircleOutline"
                                                Padding="0 0 5 0"
                                                IsVisible="{Binding ., Converter={StaticResource UpToDateConverter}}"
                                                ToolTip.Tip="{x:Static i18n:Resources.DepCtrl_Update_Available_ToolTip}" />
                            <TextBlock Grid.Column="2"
                                       Text="{Binding Version, StringFormat='v{0}'}" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </DockPanel>
        <!-- Installed selection information -->
        <controls:ModuleInformation Grid.Column="1"
                                    Grid.Row="1"
                                    DataContext="{Binding SelectedInstalledModule}" />
        <!-- Store buttons -->
        <Grid Grid.Column="0"
              Grid.Row="2"
              ColumnDefinitions="Auto, Auto, *">
            <Button Grid.Column="0"
                    Margin="2 0 1 0"
                    Content="{icons:MaterialIconExt Kind=CloudRefreshOutline}"
                    ToolTip.Tip="{x:Static i18n:Resources.DepCtrl_Button_Refresh_ToolTip}"
                    Command="{Binding RefreshCommand}" />
            <Button Grid.Column="1"
                    Margin="1 0"
                    Content="{x:Static i18n:Resources.DepCtrl_Button_RepoManager}"
                    ToolTip.Tip="{x:Static i18n:Resources.DepCtrl_Button_RepoManager_ToolTip}" />
            <Button Grid.Column="2"
                    Margin="1 0 2 0"
                    Content="{x:Static i18n:Resources.DepCtrl_Button_Install}"
                    ToolTip.Tip="{x:Static i18n:Resources.DepCtrl_Button_Install_ToolTip}"
                    IsEnabled="{Binding InstallButtonEnabled}"
                    Command="{Binding InstallCommand}" />
        </Grid>
        <!-- Installed buttons -->
        <Grid Grid.Column="1"
              Grid.Row="2"
              ColumnDefinitions="*, Auto, Auto">
            <Button Grid.Column="0"
                    Margin="2 0 1 0"
                    Content="{x:Static i18n:Resources.DepCtrl_Button_UpdateAll}"
                    ToolTip.Tip="{x:Static i18n:Resources.DepCtrl_Button_UpdateAll_ToolTip}"
                    IsEnabled="{Binding UpdateAllButtonEnabled}"
                    Command="{Binding UpdateAllCommand}" />
            <Button Grid.Column="1"
                    Margin="1 0"
                    Content="{x:Static i18n:Resources.DepCtrl_Button_Update}"
                    ToolTip.Tip="{x:Static i18n:Resources.DepCtrl_Button_Update_ToolTip}"
                    IsEnabled="{Binding UpdateButtonEnabled}"
                    Command="{Binding UpdateCommand}" />
            <Button Grid.Column="2"
                    Margin="1 0 2 0"
                    Content="{x:Static i18n:Resources.DepCtrl_Button_Uninstall}"
                    ToolTip.Tip="{x:Static i18n:Resources.DepCtrl_Button_Uninstall_ToolTip}"
                    IsEnabled="{Binding UninstallButtonEnabled}"
                    Command="{Binding UninstallCommand}" />
        </Grid>
    </Grid>
</Window>